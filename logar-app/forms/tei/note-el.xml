    <xf:repeat ref="tei:note" id="new-note">
        <fieldset>
            <legend> 
                Note
                <xf:trigger appearance="minimal" class="btn remove pull-right">
                    <xf:label/>
                    <xf:delete ev:event="DOMActivate" ref="."/>
